# Environment Configuration Example
# Copy this to .env and fill in your actual values

# Flask Environment
FLASK_ENV=development
# Options: development, production, testing

# Database Configuration
DB_HOST=your-database-host
DB_PORT=3306
DB_NAME=stockwatch
DB_USERNAME=your-db-username
DB_PASSWORD=your-db-password

# Security Keys
SECRET_KEY=your-super-secret-flask-key
JWT_SECRET_KEY=your-jwt-secret-key

# Stripe Configuration (from your existing setup)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_MONTHLY=price_your_monthly_price_id
STRIPE_YEARLY=price_your_yearly_price_id

# Email Configuration (optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=noreply@stockwatch.com

# Frontend URL (production)
FRONTEND_URL=https://your-frontend-domain.com

MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
BASE_URL=http://localhost:5000